@model List<ResultBookingDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}



            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Misafir</th>
                            <th>Giriş Tarihi</th>
                            <th>Çıkış Tarihi</th>
                            <th>Durum</th>
                            <th>Onayla</th>
                            <th>İptal Et</th>
                            <th>Beklet</th>
                            <th>Güncelle</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model) {
                                    
                        <tr>
                            <th>@item.BookingID</th>
                            <td>@item.Name</td>
                            <td>
                                @(((DateTime)item.Checkin).ToString("dd-MMM-yyyy"))
                            </td>
                            <td> @(((DateTime)item.CheckOut).ToString("dd-MMM-yyyy"))</td>
                            <td class="color-primary">@item.Status</td>
                            <td><a href="/BookingAdmin/ApprovedReservation2/@item.BookingID" class="btn btn-outline-danger"> Onayla</a> </td>
                            <td><a href="/BookingAdmin/CancelReservation/@item.BookingID" class="btn btn-outline-primary"> İptal Et</a> </td>
                            
                            <td><a href="/BookingAdmin/WaitReservation/@item.BookingID" class="btn btn-outline-info"> Beklet</a> </td>
                            <td><a href="/BookingAdmin/UpdateGuest/@item.BookingID" class="btn btn-outline-light"> Güncelle</a> </td>
                            <td><a href="/BookingAdmin/UpdateGuest/@item.BookingID " class="btn btn-outline-success"> Detaylar</a> </td>
                        </tr>
                        }
                        
                    </tbody>
                </table>
            </div>
      



